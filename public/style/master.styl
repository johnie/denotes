@import "lib/utils.styl"
@import "lib/normalize.styl"
@import "lib/mixins.styl"
@import "lib/helpers.styl"
@import "lib/loader.styl"

*, *:before, *:after
  vendor('box-sizing', border-box)

body
  font 16px/1.68 normal $base-font-family
  background-color $base-ui-color
  color #fff



/**
 * HEADER
 */
.header
  display block

  &__inner
    max-width 1250px
    margin 0 auto
    position relative
    padding 3em 0  
    text-align center
    @extends .cf

.site-name
  color $brand-color
  font-weight normal
  font-style italic
  font-size 4em
  line-height 1
  margin 0

.site-description
  color #eee
  font-weight normal
  font-size 1.2em



/**
 * Main navigation
 */
.main-nav
  position absolute
  top 50%
  left 0
  vendor('transform', translateY(-50%))
  @extends .cf

  &__btn
    vendor('appearance', none)
    border none
    background transparent url('../images/menu.svg') top center no-repeat
    background-size 100%
    width 1.5em
    height 1.5em
    text-indent -9999px
    display block


.search
  position absolute
  top 50%
  right 0
  vendor('transform', translateY(-50%))
  @extends .cf

  &__btn
    vendor('appearance', none)
    border none
    background transparent url('../images/search.svg') top center no-repeat
    background-size 100%
    width 1.5em
    height 1.5em
    text-indent -9999px
    display block


/**
 * Movies List
 */
.movies
  display -webkit-flex
  display -moz-flex
  display -ms-flex
  display -o-flex
  display flex
  flex-direction row
  flex-wrap wrap
  justify-content center
  align-content stretch
  align-items stretch
  list-style none
  margin 0
  padding 0
  @extends .cf

  &__item
    text-align center
    font-size .8em
    background-color darken($base-ui-color, 35%)
    color #eee
    width 420px
    padding 2em
    margin 10px
    vendor('border-radius', 4px)
    position relative

    &.done:before
      content ''
      display block
      width 1.5em
      height 1.5em
      background transparent url('../images/star.svg') center center no-repeat
      background-size 100%
      position absolute
      top -.5em
      left -.5em

  &__image
    display block
    margin 0 auto
    margin-bottom 2em
    @extends .cf



/**
 * Footer
 */
.footer
  position relative
  display block
  @extends .cf

  &__inner
    text-align center
    line-height 100px

  
.copyright
  font-size 14px

  span
    color #C02932
